<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <artifactId>starter-kit</artifactId>
  <version>1.3.7-SNAPSHOT</version>
  <name>StarterKit</name>
  <description>Plugin for the Minecraft wrapper Bukkit that provides a method for administrators to give items to new players automatically.</description>
  <url>http://grandwazir.github.com/${project.name}/</url>

  <parent>
     <groupId>name.richardson.james.bukkit</groupId>
     <artifactId>maven-parent</artifactId>
     <version>1</version>
  </parent>

  <repositories>
      <repository>
          <id>elMakers</id>
          <url>http://maven.elmakers.com/repository/</url>
      </repository>
      <repository>
      <id>my-repo</id>
      <url>http://repository.james.richardson.name/releases</url>
    </repository>
      <repository>
          <id>Plugin Metrics</id>
          <url>http://repo.mcstats.org/content/repositories/public</url>
      </repository>
  </repositories>

  <dependencies>
     <dependency>
           <groupId>name.richardson.james.bukkit</groupId>
           <artifactId>bukkit-utilities</artifactId>
           <version>6.0.5</version>
     </dependency>
      <dependency>
          <groupId>org.mcstats.bukkit</groupId>
          <artifactId>metrics</artifactId>
          <version>R6</version>
          <scope>compile</scope>
      </dependency>
  </dependencies>

  <build>
      <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-shade-plugin</artifactId>
             <!-- We want to bundle in BukkitUtilities -->
            <version>1.5</version>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>shade</goal>
                </goals>
                  <configuration>
                      <shadedArtifactAttached>true</shadedArtifactAttached>
                      <shadedClassifierName>shaded</shadedClassifierName>
                      <artifactSet>
                          <includes>
                              <include>name.richardson.james.bukkit:bukkit-utilities</include>
                              <include>org.mcstats.bukkit:metrics</include>
                          </includes>
                      </artifactSet>
                      <relocations>
                          <relocation>
                              <pattern>name.richardson.james.bukkit.utilities</pattern>
                              <shadedPattern>name.richardson.james.bukkit.starterkit.utilities</shadedPattern>
                          </relocation>
                          <relocation>
                              <pattern>org.mcstats</pattern>
                              <shadedPattern>name.richardson.james.bukkit.starterkit.utilities.metrics</shadedPattern>
                          </relocation>
                      </relocations>
                      <minimizeJar>true</minimizeJar>
                  </configuration>
              </execution>
            </executions>
          </plugin>
      </plugins>
  </build>

</project>
